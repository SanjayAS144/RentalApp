<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RentalAPP" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.AppCompat.navTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">

        <!-- Color of text and icon when SELECTED -->
        <item name="colorPrimary">#000</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:statusBarColor">#ffffff</item>

        <!-- Background color when SELECTED -->
        <item name="colorControlHighlight">#AEC2D6EC</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>