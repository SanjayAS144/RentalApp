<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="160dp"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="-40dp"
                android:scaleType="fitCenter"
                android:id="@+id/carimage"
                android:src="@drawable/carimage5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:id="@+id/carname"
                android:layout_toLeftOf="@id/carimage"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lexus ES"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:textSize="22sp"
                    android:id="@+id/carproductname"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat"
                    android:textColor="#00C2C2"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hybrid"
                    android:textAllCaps="true"
                    android:layout_marginStart="20dp"
                    android:textColor="#A6A6A6"
                    android:letterSpacing="0.1"
                    android:layout_marginTop="-5dp"
                    android:fontFamily="@font/montserrat"
                    android:textStyle="bold"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="1000 RS  /"
                        android:id="@+id/price"
                        android:layout_marginStart="20dp"
                        android:textSize="20sp"
                        android:fontFamily="@font/montserrat_bold"
                        android:textColor="#F46E64"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/price"
                        android:layout_marginBottom="2dp"
                        android:layout_alignParentBottom="true"
                        android:text="  hour" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/completed"
                        android:id="@+id/safe"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/safe"
                        android:layout_centerVertical="true"
                        android:text="  Safe Vehicle" />

                </RelativeLayout>



            </LinearLayout>

        </RelativeLayout>

